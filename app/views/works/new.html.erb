<% title "submit a new work" %>>
<h2><%= yield(:title) %></h2>
<%= error_messages_for 'work' %>
<div id="left" class="span-8">

  <% form_for @work do |f| %> 
  
   name of work:<br / >
   <div><%= f.text_field :name, :size=>30 %> </div>
   <br / >
  
   url:  <br / >
   <div><%= f.text_field :url, :value =>"http://", :size=>30 %> </div>
  <br / >
  
   Your name: <br / > 
   <div><%= f.text_field :submitter, :size=>30 %> </div>
   <br / >
  
  
  <p> 
    <button type="submit" class="button positive">
    	  <img src="/stylesheets/blueprint/plugins/buttons/icons/tick.png" alt=""/> Save
    </button>
  </p> 
  <% end %> 

</div>
<div id="right" class="span-16">
</div>