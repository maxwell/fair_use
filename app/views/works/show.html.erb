<% title @work.name %>
<h2><%=link_to @work.name, @work.url %> </h2>
<div id="work_info" class = "span-12">
  <h3>url: <%=@work.url%></h3>
  <h3>fair use score: ??????<%= %></h3>
  <p>Number of Surveys completed for this item: <%= @work.results_count %> </p>
  <div id="button">
    <a class="button" href="<%= new_work_result_path(@work)%>" >
    	  <img src="/stylesheets/blueprint/plugins/buttons/icons/tick.png" alt=""/> 
    	    Assess Fair Use
    </a>
  </div>
</div>

<div class="span-12 last">
  <% if !@work.embed_url.nil? %>
    <div id = "video" class="prepend-3">
      <%= @work.embed_url%> 
    </div>
  <% end %>
</div>
 
<div class= "span-24 last">
  <div id = "center">
    <% if @work.results.empty? %>
    <em>No Results for this work yet!</em>
    <% else %>
  
    <table id = "hor-minimalist-a" summary="results for this work">
      <thead>
        <tr>
          <th scope = "col">id</th>
          <th scope = "col">result</th>
          <th scope = "col">q 1</th>
          <th scope = "col">q 2</th>
          <th scope = "col">q 3</th>
          <th scope = "col">q 4</th>
          <th scope = "col">q 5</th>
          <th scope = "col">q 6</th>
          <th scope = "col">created at</th>
        </tr>
      </thead>
      <tbody>
        <%= render :partial => 'results/result',
        :collection => @work.results.all %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
